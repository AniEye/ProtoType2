<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_main_buttons</item>
        <item name="android:textAppearance">@style/CustomText</item>
    </style>

    <style name="CustomTableItem">
        
        <item name="android:background">@drawable/table_item_with_border</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/TableBorderColor</item>
    </style>

    <style name="CustomSpinner">
        <item name="android:background">@drawable/selector_listview</item>
        <item name="android:textAppearance">@style/CustomText</item>
    </style>

    <style name="CustomSpinnerItem">
        <item name="android:background">@drawable/selector_listview</item>
        <item name="android:textAppearance">@style/CustomText</item>
    </style>

    <style name="CustomText" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/ButtonTextColor</item>
    </style>

    <style name="ViewWithSpinners" parent="@style/AppTheme">
        <item name="android:background">@color/BackgroundColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <color name="BackgroundColor">#0F0F0F</color>
    <color name="ButtonAndSpinnerBackgroundColor">#808080</color>
    <color name="ButtonAndSpinnerBackgroundColor_Pressed">#B7B7B7</color>
    <color name="ButtonTextColor">#F8F8FF</color>
    <color name="TableBackgroundColor">#FFFFFF</color>
    <color name="TableBorderColor">#000000</color>

    <!--
    For colors that go well: http://www.w3schools.com/tags/ref_color_tryit.asp?color=Grey
    Change ....ast?color=*** with a background color to test
    -->

</resources>