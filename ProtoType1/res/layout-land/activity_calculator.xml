<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ViewWithSpinners"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context=".Calculator" >

    <ListView
        android:id="@+id/listKalkHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:entries="@array/calculator"
        android:choiceMode="singleChoice"
        android:listSelector="@color/ButtonAndSpinnerBackgroundColor_Pressed"
        android:paddingRight="5dp" />

    <ScrollView
        android:id="@+id/svKalkHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:background="@color/ButtonAndSpinnerBackgroundColor" >

        <LinearLayout
            android:id="@+id/lInSVKalkHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>